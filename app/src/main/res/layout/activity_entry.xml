<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dar.mymal.EntryActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/entry_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
    <LinearLayout
        android:id="@+id/entry_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <ImageView
            android:id="@+id/entry_image"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/add_to_list"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="Add to list" />
        <LinearLayout
            android:id="@+id/is_in_list"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/entry_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/status_anime"
                android:layout_weight="2" />

            <Spinner
                android:id="@+id/entry_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:entries="@array/score_array" />


        </LinearLayout>

    </LinearLayout>


            <LinearLayout
                android:id="@+id/entry_tags_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="11">

                <EditText
                    android:id="@+id/entry_tags_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/entry_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="TextView" />

                <Button
                    android:id="@+id/entry_tags_changer"
                    android:layout_width="0dp"
                    android:text="✍"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/entry_infos"
                android:orientation="vertical"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/entry_relative"
                android:orientation="vertical"></LinearLayout>
            <TextView
                android:id="@+id/entry_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desc" />

            <Button
                android:id="@+id/entry_view_mal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View on MAL" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
