<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dar.mymal.EntryActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/entry_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <ImageView
            android:id="@+id/entry_image"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/entry_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/status_anime"
                android:layout_weight="2" />

            <Spinner
                android:id="@+id/entry_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:entries="@array/score_array" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/entry_episode_static"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="999/999"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/entry_adder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="+1" />

                <Button
                    android:id="@+id/open_episodes_menu"
                    android:layout_width="0dp"
                    android:text="▼"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/episode_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/entry_episode_changer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_weight="9"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/entry_episode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="/" />

                    <TextView
                        android:id="@+id/entry_episode_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="N Ep" />
                    <Button
                        android:id="@+id/entry_episodes_changer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="OK"
                        android:layout_weight="2" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="11">

                <EditText
                    android:id="@+id/entry_tags_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/entry_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="TextView" />

                <Button
                    android:id="@+id/entry_tags_changer"
                    android:layout_width="0dp"
                    android:text="✍"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/entry_infos"
                android:orientation="vertical"></LinearLayout>
            <TextView
                android:id="@+id/entry_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desc" />

            <Button
                android:id="@+id/entry_view_mal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View on MAL" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
