<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dar.mymal.EntryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/entry_title"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <LinearLayout
                android:animateLayoutChanges="true"
                android:id="@+id/entry_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/entry_image"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/add_to_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Add to list"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/is_in_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/entry_status"
                        style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:entries="@array/status_anime" />

                    <Switch
                        android:id="@+id/entry_rewatch"
                        style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Switch" />

                    <Spinner
                        android:id="@+id/entry_score"
                        style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:entries="@array/score_array" />



                    <LinearLayout
                        android:id="@+id/updater_master_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/updater_sub_0"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/updater_edit_0"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="number" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="/" />

                            <TextView
                                android:id="@+id/updater_total_0"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="N Ep" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/updater_static_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="999/999"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/updater_adder_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="+1" />

                        <Button
                            android:id="@+id/updater_opener_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="✍" />
                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/updater_master_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/updater_sub_1"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/updater_edit_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="number" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="/" />

                            <TextView
                                android:id="@+id/updater_total_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="N Ep" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/updater_static_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="999/999"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/updater_adder_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="+1" />

                        <Button
                            android:id="@+id/updater_opener_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="✍" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/updater_master_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/updater_sub_2"
                            android:layout_width="0dp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/updater_edit_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="number" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="/" />

                            <TextView
                                android:id="@+id/updater_total_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="N Ep" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/updater_static_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="999/999"
                            android:textAlignment="center" />

                        <Button
                            android:id="@+id/updater_adder_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="+1" />

                        <Button
                            android:id="@+id/updater_opener_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="✍" />
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/entry_tags_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="11">

                <EditText
                    android:id="@+id/entry_tags_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:inputType="textPersonName"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/entry_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/entry_tags_changer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="✍"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/entry_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/entry_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:focusable="false"
                    android:ems="10"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="date" />
                <EditText
                    android:id="@+id/entry_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:focusable="false"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:inputType="date" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/entry_infos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/entry_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <Button
                android:id="@+id/view_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Recommendations" />
            <Button
                android:id="@+id/view_rew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Reviews" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Synopsis" />

            <TextView

                android:id="@+id/entry_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desc" />

            <Button
                android:id="@+id/entry_view_mal"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="View on MAL" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
